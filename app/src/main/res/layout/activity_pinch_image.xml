<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:id="@+id/main"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:background="@color/black"
                                                   tools:context=".ui.PinchImageActivity">

    <com.paperpig.maimaidata.widgets.PinchImageView
        android:id="@+id/pinch_image_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:transitionName="shared_image"/>

    <androidx.constraintlayout.widget.Group
        android:visibility="gone"
        android:id="@+id/image_button_group"
        app:constraint_referenced_ids="save_image_btn,share_image_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/save_image_btn"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="50dp"
        android:src="@drawable/image_save"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/share_image_btn"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="50dp"
        android:src="@drawable/image_share"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/save_image_btn"/>
</androidx.constraintlayout.widget.ConstraintLayout>